<div class="row">&nbsp;</div><div class="row">&nbsp;</div><div class="row">&nbsp;</div>
<div class="row">
	{{#if id}}
	{{#unless editing}}
	<h3>
		<span class="span1">
			<i id="edit-user" class="icon-edit icon icon-white btn btn-inverse"></i>
		</span>
		<span class="span4">{{name}}</span>
	</h3>
	{{else}}
	<div class="span4">
		<input id="user-name" class="span4" placeholder="{{name}}" value="{{name}}" />
	</div>
	<div class="span1">
		<i id="update-user" class="icon-ok icon icon-white btn btn-success"></i>
	</div>
	<div class="span1">
		<i id="cancel-user" class="icon-remove icon icon-white btn btn-danger"></i>
	</div>
	{{/unless}}
	{{else}}
	<div class="span4">
		<input id="user-name" class="span4" placeholder="Name..." />
	</div>
	<div class="span1">
		<i id="save-user" class="span1 icon-plus-sign icon icon-white btn btn-success"></i>
	</div>
	{{/if}}
</div>
<div class="row">&nbsp;</div>